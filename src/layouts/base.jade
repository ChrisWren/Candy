//- Mixin for post, used on homepage and post page
mixin postHead(post)
  .post-head.group
    a(href="/#{post.url}")
      h1.post-title= post.title
    h2.post-date= [post.date.getUTCFullYear(), post.date.getMonth() + 1, post.date.getDay()].join(' Â· ')

mixin post(post)
  mixin postHead(post)
  .post-body!= post.content

doctype 5
html
  head
    meta(charset="utf8")
    meta(name="viewport", content="width=device-width")
    link(rel="icon", type="image/png", href="/images/cabin.png")
    link(href="/styles/main.css", rel="stylesheet")
    block title
      title= "My Blog"
  body
    .nav
      h1.name
        a(href="/") My Name
      ul.nav-links
        li
          a(href="/archives.html") archives
        li
          a(href="https://github.com/") github
        li
          a(href="https://twitter.com/") twitter

    .content
      block content
  img.cabin(src="./images/cabin.png")
