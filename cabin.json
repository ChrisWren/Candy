{
  "style": [
    "CSS",
    "Sass"
  ],
  "template": [
    "Jade",
    "EJS"
  ],
    "pages": {
      "options": {
        "pageSrc": "src/pages"
      },
      "gruntPages": {
        "src": "posts",
        "dest": "site",
        "layout": "src/layouts/post.<%= templateLang %>",
        "url": "blog/posts/:title",
        "options": {
          "pagination": {
            "postsPerPage": 3,
            "listPage": "src/pages/index.<%= templateLang %>"
          }
        }
      }
    }
}
